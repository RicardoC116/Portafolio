---
import PHP from "./icons/PHP.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Laravel from "./icons/Laravel.astro";
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import ViewMore from "./icons/ViewMore.astro";
import Js from "./icons/Skils/Front-End/Js.astro";
import Html from "./icons/Skils/Front-End/HTML.astro";
import Css from "./icons/Skils/Front-End/Css.astro";

const TAGS = {
    Laravel: {
        name: "Laravel",
        class: "bg-[#41110c]/60 text-white text-white",
        icon: Laravel,
    },
    PHP: {
        name: "PHP",
        class: "bg-[#1d233b] text-white text-white",
        icon: PHP,
    },
    Bootstrap: {
        name: "Bootstrap",
        class: "bg-[#231532]/85 text-white text-white ",
        icon: Bootstrap,
    },
    JS: {
        name: "JS",
        class: "bg-[#3d3e1ecc]/80 text-white text-white",
        icon: Js,
    },
    html:{
        name: "HTML",
        class: "bg-[#4e2415cc]/80 text-white text-white",
        icon: Html
    },
    css:{
        name: "CSS",
        class: "bg-[#123051cc]/80 text-white text-white",
        icon: Css
    }
};

const PROJECTS = [
    {
        title: "Software de cursos online",
        description:
            "Desarrollé un software robusto para una plataforma de cursos en línea, diseñada para proporcionar una amplia variedad de cursos a los usuarios. Utilicé tecnologías como Laravel, PHP y Bootstrap para garantizar un funcionamiento eficiente y una experiencia de usuario intuitiva. ",
        link: "http://sandboxmd.sar-solutions.com/home",
        github: "",
        image: "/Sar.webp",
        tags: [TAGS.Laravel, TAGS.PHP, TAGS.Bootstrap],
    },

    {
        title: "Tier list",
        description: "Desarrollé un tier list funcional mediante JS y HTML, el cual se puden arrastrar las imagenes desde el escritorio y al terminar de crear su tier se puede tomar una captura del tier creado mediante el boton de guardar",
        link: "https://tier-list-jade.vercel.app/",
        github: "https://github.com/RicardoC116/Tier-list",
        image: "/Tiermaker.webp",
        tags: [TAGS.JS, TAGS.html, TAGS.css],
    },
];
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
        <article class=" mb-8">
            <h3 class="text-2xl font-semibold text-red-200/80 mb-4">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row ">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex font-semibold text-sm gap-x-2 rounded-full items-center ${tag.class} py-1 px-4`}
                        >
                            <tag.icon class="size-6" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class= {`rounded-3xl shadow-2xl shadow-white/5 mt-11 `  }
                src={image}
                alt={title}
            />
            <footer class="flex gap-x-4 mt-4">
                {github && (
                    <LinkButton href={github}>
                        <GitHub class="size-5" />
                        Ver Codigo Fuente
                    </LinkButton>
                )}

                {link && (
                    <LinkButton href={link}>
                        <ViewMore />
                        Ir al sitio Web
                    </LinkButton>
                )}
            </footer>
        </article>
    ))
}
